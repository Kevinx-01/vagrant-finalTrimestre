https://pastebin.com/ChQtmHadvagrant 


NGINX 
apt-get update
apt-get install nginx mysql-client

wget https://wordpress.org/latest.tar.gz
tar -xzvf latest.tar.gz


PHP-fpm
apt-get update
apt-get intstall php-fpm php-mysql php-curl php-gd php-intl php-mbstring php-soap php-xml php-xmlrpc php-zip

sed -i "s/^listen =.*/listen = 9000/" /etc/php/7.4/fpm/pool.d/www.conf

systemctl restart php7.4-fpm

MYSQL 
apt-get update
apt-get install mysql-server

sed -i "s/^bind-address.*/bind-address = 10.100.199.202/" /etc/mysql/mysql.conf.d/mysqld.cnf

SET GLOBAL validate_password.policy=LOW;
CREATE USER 'ciber'@'%' IDENTIFIED BY 'supersegura1';

systemctl restart mysql

